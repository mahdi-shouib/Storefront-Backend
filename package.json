{
	"name": "storefront-backend",
	"version": "1.0.0",
	"description": "",
	"homepage": "https://github.com/mahdi-shouib/Storefront-Backend#readme",
	"bugs": {
		"url": "https://github.com/mahdi-shouib/Storefront-Backend/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mahdi-shouib/Storefront-Backend.git"
	},
	"main": "dist/server.js",
	"scripts": {
		"format": "prettier --write src/**/*.{ts,json}",
		"lint": "eslint src/**/*.ts",
		"prebuild": "yarn format && yarn lint",
		"start": "node dist/server.js",
		"watch": "tsc-watch --onSuccess \"node dist/server.js\"",
		"drop_test": "dotenv -e .env -- sh -c \"db-migrate db:drop $POSTGRES_TEST_DB\"",
		"create_test": "dotenv -e .env -- sh -c \"db-migrate db:create $POSTGRES_TEST_DB\"",
		"start_test": "dotenv -e .env -- sh -c \"ENV=test jasmine-ts\"",
		"migrate_test": "db-migrate --env test up",
		"test": "sh -c \"yarn drop_test && yarn create_test && yarn migrate_test && yarn start_test; yarn drop_test\"",
		"build": "tsc"
	},
	"author": "Mahdi Shouib",
	"license": "ISC",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^17.2.2",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jasmine": "^5.1.9",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.5.2",
		"@types/pg": "^8.15.5",
		"db-migrate": "^0.11.14",
		"db-migrate-pg": "^1.5.2",
		"dotenv-cli": "^10.0.0",
		"eslint": "^9.36.0",
		"jasmine": "^3.10.0",
		"jasmine-spec-reporter": "^7.0.0",
		"jasmine-ts": "^0.4.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"tsc-watch": "^7.1.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0"
	}
}
